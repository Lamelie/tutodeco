{% extends 'base.html.twig' %}

{% block title %}Se créer un compte{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <section class="container card-border">
        <div class="row align-content-center card">
            <h1 class="login-container-h1 w-100">Créer son compte</h1>
            <div class="p-2">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.first_name , {
                    label: 'Votre prénom'
                }) }}
                {{ form_row(registrationForm.last_name, {
                    label: 'Votre nom'
                }) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms,{
                    label: 'J\'accepte les conditions d\'utilisation du site'
                    }) }}
                <button type="submit" class="btn tutodeco-btn">Enregistrer</button>
            {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>

{% endblock %}
