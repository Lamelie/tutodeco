<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <!-- Le meta magique pour les appareils mobiles :)-->
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <title>{% block title %}TutoDéco{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>

    {#appel de la page Nav pour affichage du menu de navigation#}
    {{ render(controller(
        'App\\Controller\\DefaultController::tutoNav')
    ) }}

    <body>
    <main class="main-content container">

    {% block body %}
    {% endblock %}
    </main>
    <footer>
        <div class="container">
            <div class="row justify-content-center">
                <p><i class="fa fa-copyright"></i>Tuto déco 2020</p>
                <p><a href="{{ path('conditions') }}">Conditions d'utilisation du site</a></p>
            </div>
        </div>

    </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?onload=onGoogleReCaptchaApiLoad&render=explicit&hl={{app.request.locale}}" async defer></script>
        {% endblock %}
    </body>
</html>
