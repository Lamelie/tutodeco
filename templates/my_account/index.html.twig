{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
<div class="row">
    <div class="tuto-container col-md-12">

        <h1>Mon Compte</h1>

        <p>{{ app.user.firstName }}, voici votre compte.</p>

        <ul class="nav nav-tabs myaccount-tab col-md-6" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="todo-tab" data-toggle="tab" role="tab" aria-controls="todo" href="#todo">Ma todo-list</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="done-tab" data-toggle="tab" role="tab" href="#done" aria-controls="done">Ma done-list</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="tutos-tab" data-toggle="tab" role="tab" href="#tutos" aria-controls="tutos">Mes tutos</a>
            </li>
        </ul>

        <div class="tab-content" id="myTabContent">
            <div id="todo" class="tab-pane fade show in active" role="tabpanel" aria-labelledby="todo-tab">
                <h3>TODO-LIST</h3>
                <p>Some content.</p>
            </div>
            <div id="done" class="tab-pane fade" role="tabpanel" aria-labelledby="done-tab">
                <h3>DONE-LIST</h3>
                <p>Some content in menu 1.</p>
            </div>
            <div id="tutos" class="tab-pane fade" role="tabpanel" aria-labelledby="tutos-tab">
                <h3>MES TUTOS</h3>
                <p>Some content in menu 2.</p>
            </div>
        </div>

    </div>
</div>

    {% endblock %}
