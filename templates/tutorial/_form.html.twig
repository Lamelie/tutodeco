<form method="post" enctype="multipart/form-data">
{{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.materials) }}
    {{ form_row(form.tools) }}
    {{ form_row(form.duration) }}
    {{ form_row(form.level) }}
    {{ form_row(form.cost) }}
    {{ form_row(form.imageFile) }}
    {{ form_row(form.tags) }}
    {{ form_row(form._token) }}

    <ul class="steps" data-prototype="{{ form_widget(form.steps.vars.prototype)|e('html_attr') }}">
        {% for step in form.steps %}
            <li>{{ form_row(step.description) }}</li>
        {% endfor %}
    </ul>

    <button class="btn">{{ button_label|default('Enregistrer') }}</button>

{{ form_end(form, {'render_rest': false} ) }}
